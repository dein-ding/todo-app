{
    "name": "todo-app",
    "version": "0.0.0",
    "scripts": {
      "serve": "ng serve -o",
      "serve:lan": "npm run local-ip && ng serve --host 0.0.0.0 -o",
      "build": "ng build --delete-output-path",
      "build:watch:dev": "ng build --watch --configuration development",
      "serve-build": "nodemon --exec angular-http-server --path ./dist/todo-app",
      "build:watch": "ng build --watch --delete-output-path",
      "test": "ng test",
      "local-ip": "echo $(echo \"your local IP adress is:\" && ipconfig getifaddr en0)",
      "e2e": "ng e2e",
      "cypress:open": "cypress open",
      "cypress:run": "cypress run"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~13.3.11",
        "@angular/cdk": "^13.3.0",
        "@angular/common": "~13.3.11",
        "@angular/compiler": "~13.3.11",
        "@angular/core": "~13.3.11",
        "@angular/forms": "~13.3.11",
        "@angular/platform-browser": "~13.3.11",
        "@angular/platform-browser-dynamic": "~13.3.11",
        "@angular/router": "~13.3.11",
        "@angular/service-worker": "~13.3.11",
        "@ngrx/effects": "^13.2.0",
        "@ngrx/store": "^13.2.0",
        "@ngrx/store-devtools": "^13.2.0",
        "rxjs": "~7.5.5",
        "tslib": "^2.2.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~13.3.8",
        "@angular/cli": "~13.3.8",
        "@angular/compiler-cli": "~13.3.11",
        "@cypress/schematic": "^2.0.0",
        "@types/jasmine": "~3.8.0",
        "@types/node": "^12.11.1",
        "angular-http-server": "^1.10.0",
        "jasmine-core": "~3.8.0",
        "karma": "~6.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "~1.7.0",
        "nodemon": "^2.0.16",
        "typescript": "~4.6.4",
        "cypress": "latest"
    }
}
